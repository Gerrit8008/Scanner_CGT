# Security Scanner Configuration
# Copy this file to .env and fill in your values

# Flask Configuration
SECRET_KEY=your_strong_secret_key_here
FLASK_ENV=development  # or production
FLASK_DEBUG=True  # False in production

# Email Configuration
SMTP_SERVER=mail.privateemail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com  # Replace with your actual email
SMTP_PASSWORD=your_email_password  # Replace with your actual password
ADMIN_EMAIL=your_email@example.com  # Email to receive admin notifications

# Database Configuration
# Uncomment and set if you want to use a custom path
# DB_PATH=/path/to/your/database.db

# Feature Flags
ENABLE_AUTO_EMAIL=True
FULL_SCAN_ENABLED=True

# Rate Limiting
RATE_LIMIT_PER_DAY=200
RATE_LIMIT_PER_HOUR=50
